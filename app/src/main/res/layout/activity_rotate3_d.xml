<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/main_fl_container"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:onClick="flipCard"
        tools:context="com.testanim.longwu.activity.Rotate3DActivity">

        <include layout="@layout/cell_card_back" />

        <include layout="@layout/cell_card_front" />

        <!--<?xml version="1.0" encoding="utf-8"?>-->
        <!--<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"-->
        <!--xmlns:app="http://schemas.android.com/apk/res-auto"-->
        <!--xmlns:tools="http://schemas.android.com/tools"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--tools:context="com.testanim.wujing.activity.Rotate3DActivity">-->

        <!--</android.support.constraint.ConstraintLayout>-->
    </FrameLayout>

    <ImageView
        android:id="@+id/im_1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        android:background="@mipmap/circle" />

    <ImageView
        android:id="@+id/im_2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        android:background="@mipmap/find_pwd_error" />

    <ImageView
        android:id="@+id/im_3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        android:background="@mipmap/rejectforever" />

    <android.support.v7.widget.CardView
        android:id="@+id/im_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        android:background="@color/red_indicator"
        app:cardBackgroundColor="@color/red_indicator"
        app:cardCornerRadius="18dp"
        app:cardElevation="3dp" />
</RelativeLayout>